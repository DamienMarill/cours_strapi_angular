{
  "name": "cours-directus-angular",
  "version": "1.0.0",
  "description": "Projet de cours - Directus + Angular",
  "private": true,
  "scripts": {
    "directus:dev": "cd poc/directus-backend && npm run dev",
    "directus:build": "cd poc/directus-backend && npm run build",
    "directus:start": "cd poc/directus-backend && npm run start",
    "directus:init": "cd poc/directus-backend && npm run init",
    "angular:dev": "cd poc/angular-frontend && ng serve",
    "angular:build": "cd poc/angular-frontend && ng build",
    "angular:test": "cd poc/angular-frontend && ng test",
    "dev": "concurrently \"npm run directus:dev\" \"npm run angular:dev\"",
    "install:all": "npm install && cd poc/directus-backend && npm install && cd ../angular-frontend && npm install",
    "clean": "rm -rf node_modules poc/*/node_modules"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "cross-env": "^10.0.0"
  },
  "engines": {
    "node": ">=18.13.0",
    "npm": ">=9.0.0"
  },
  "keywords": ["cours", "directus", "angular", "fullstack", "formation"],
  "author": "Cours Directus + Angular",
  "license": "MIT"
}